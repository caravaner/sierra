generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth (NextAuth.js) ─────────────────────────────────────

enum UserRole {
  USER
  ADMIN
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  phone          String?   @unique
  emailVerified  DateTime? @map("email_verified")
  image          String?
  hashedPassword String?   @map("hashed_password")
  role           UserRole  @default(USER)
  isActive       Boolean   @default(true) @map("is_active")
  attributes     Json      @default("{}") @db.JsonB
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]
  customer Customer?
  cart     Cart?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  attributes        Json    @default("{}") @db.JsonB

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  attributes   Json     @default("{}") @db.JsonB

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  attributes Json     @default("{}") @db.JsonB

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── Customer ───────────────────────────────────────────────

model Customer {
  id         String   @id @default(cuid())
  userId     String   @unique @map("user_id")
  phone      String   @unique
  email      String?  @unique
  firstName  String   @map("first_name")
  lastName   String   @map("last_name")
  attributes Json     @default("{}") @db.JsonB
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  addresses     Address[]
  orders        Order[]
  subscriptions Subscription[]
  invoices      Invoice[]

  @@map("customers")
}

model Address {
  id         String  @id @default(cuid())
  customerId String  @map("customer_id")
  street     String
  city       String
  state      String
  zipCode    String  @map("zip_code")
  country    String  @default("US")
  isDefault  Boolean @default(false) @map("is_default")
  attributes Json    @default("{}") @db.JsonB

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

// ─── Product ────────────────────────────────────────────────

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  sku         String   @unique
  category    String?
  images      String[] @default([])
  isActive    Boolean  @default(true) @map("is_active")
  attributes  Json     @default("{}") @db.JsonB
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  inventory  InventoryItem?
  orderItems OrderItem[]
  cartItems  CartItem[]

  @@map("products")
}

// ─── Inventory ──────────────────────────────────────────────

model InventoryItem {
  id               String   @id @default(cuid())
  productId        String   @unique @map("product_id")
  quantityOnHand   Int      @default(0) @map("quantity_on_hand")
  quantityReserved Int      @default(0) @map("quantity_reserved")
  reorderPoint     Int      @default(10) @map("reorder_point")
  attributes       Json     @default("{}") @db.JsonB
  updatedAt        DateTime @updatedAt @map("updated_at")

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("inventory_items")
}

// ─── Store Settings ─────────────────────────────────────────

model StoreSettings {
  id               String  @id @default("singleton")
  deliveryFee      Decimal @default(500) @db.Decimal(10, 2) @map("delivery_fee")
  freeDeliveryFrom Decimal @default(10000) @db.Decimal(10, 2) @map("free_delivery_from")

  @@map("store_settings")
}

// ─── Order ──────────────────────────────────────────────────

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

enum InvoiceStatus {
  ISSUED
  PAID
  CANCELLED
}

model Order {
  id              String      @id @default(cuid())
  customerId      String      @map("customer_id")
  subscriptionId  String?     @map("subscription_id")
  status          OrderStatus @default(PENDING)
  shippingStreet  String      @map("shipping_street")
  shippingCity    String      @map("shipping_city")
  shippingState   String      @map("shipping_state")
  shippingZipCode String      @map("shipping_zip_code")
  shippingCountry String      @default("US") @map("shipping_country")
  deliveryFee     Decimal     @default(0) @db.Decimal(10, 2) @map("delivery_fee")
  totalAmount     Decimal     @db.Decimal(10, 2) @map("total_amount")
  attributes      Json        @default("{}") @db.JsonB
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  customer     Customer      @relation(fields: [customerId], references: [id])
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  items        OrderItem[]
  invoice      Invoice?

  @@map("orders")
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String  @map("order_id")
  productId  String  @map("product_id")
  name       String
  quantity   Int
  unitPrice  Decimal @db.Decimal(10, 2) @map("unit_price")
  attributes Json    @default("{}") @db.JsonB

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

// ─── Subscription ───────────────────────────────────────────

model Subscription {
  id              String             @id @default(cuid())
  customerId      String             @map("customer_id")
  intervalDays    Int                @map("interval_days")
  status          SubscriptionStatus @default(ACTIVE)
  nextDeliveryAt  DateTime           @map("next_delivery_at")
  items           Json
  shippingAddress Json               @map("shipping_address")
  attributes      Json               @default("{}") @db.JsonB
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")

  customer Customer @relation(fields: [customerId], references: [id])
  orders   Order[]

  @@map("subscriptions")
}

// ─── Invoice ────────────────────────────────────────────────

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique @map("invoice_number")
  orderId       String        @unique @map("order_id")
  customerId    String        @map("customer_id")
  subtotal      Decimal       @db.Decimal(10, 2)
  deliveryFee   Decimal       @db.Decimal(10, 2) @map("delivery_fee")
  total         Decimal       @db.Decimal(10, 2)
  status        InvoiceStatus @default(ISSUED)
  issuedAt      DateTime      @map("issued_at")
  dueAt         DateTime      @map("due_at")
  paidAt        DateTime?     @map("paid_at")
  attributes    Json          @default("{}") @db.JsonB

  order    Order    @relation(fields: [orderId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])

  @@map("invoices")
}

// ─── Cart ─────────────────────────────────────────────────

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique @map("user_id")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CartItem[]

  @@map("carts")
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String @map("cart_id")
  productId String @map("product_id")
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
  @@map("cart_items")
}

// ─── Domain Events ──────────────────────────────────────────

model DomainEvent {
  id            String   @id @default(cuid())
  eventId       String   @unique @map("event_id")
  aggregateId   String   @map("aggregate_id")
  aggregateType String   @map("aggregate_type")
  eventType     String   @map("event_type")
  principalId   String   @map("principal_id")
  commandName   String?  @map("command_name")
  commandId     String?  @map("command_id")
  payload       Json
  attributes    Json     @default("{}") @db.JsonB
  occurredAt    DateTime @map("occurred_at")

  @@index([aggregateId])
  @@index([principalId])
  @@index([aggregateType, eventType])
  @@index([occurredAt])
  @@map("domain_events")
}
